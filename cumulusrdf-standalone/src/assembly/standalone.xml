<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>${artifact.suffix}</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<files>
	    <file>
	        <source>${project.basedir}/../cumulusrdf-core/src/main/resources/cumulusRDF-default.yaml</source>
	        <destName>/etc/cumulusRDF-default.yaml</destName>
	    </file>
	    <file>
	        <source>${project.basedir}/../cumulusrdf-core/src/test/resources/exp_data.nt</source>
	        <destName>/example-data/data.nt</destName>
	    </file>
	    <file>
	        <source>${project.basedir}/../cumulusrdf-core/src/test/resources/quads.nq</source>
	        <destName>/example-data/data.nq</destName>
	    </file>
	</files>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}/src</directory>
			<outputDirectory>/</outputDirectory>	
			<includes>
				<include>README</include>
			</includes>
		</fileSet>	
		<fileSet>
			<fileMode>0750</fileMode>
			<directory>${project.basedir}/src/bin</directory>
			<outputDirectory>/bin</outputDirectory>	
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/main/resources</directory>
			<outputDirectory>/etc</outputDirectory>	
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>			
	</fileSets>	
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
		</dependencySet>
	</dependencySets>
</assembly>